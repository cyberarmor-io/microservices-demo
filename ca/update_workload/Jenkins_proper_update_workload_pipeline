pipeline {
    agent { label 'HIPSTER1' }
    stages {
        stage('git') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/ingress_version']], userRemoteConfigs: [[url:'https://github.com/cyberarmor-io/microservices-demo.git']]])
            }
        }

        stage('deploy in dev environment') {
            steps {
                sh '''
                kubectl -n dev delete -f ./ca/update_workload/update-redis-image.yaml
                kubectl -n prod delete -f ./ca/update_workload/update-redis-image.yaml
                cacli cleanup -wlid wlid://cluster-HipsterShopCluster/namespace-dev/deployment-redis-cart
                cacli cleanup -wlid wlid://cluster-HipsterShopCluster/namespace-prod/deployment-redis-cart

                kubectl -n dev apply -f ./ca/update_workload/update-redis-image.yaml
                '''
            }
        }

        stage('system test') {
            steps {
                sh '''
                sleep 120
                '''
            }
        }

        stage('signing workloads') {
            steps {
            sh '''
            ./ca/update_workload/signone.sh redis-cart
            '''
            }
        }

        stage('promote') {
            steps {
                sh '''
                sleep 10
                '''
            }
        }

        stage('deploy in prod environment') {
            steps {
                sh '''
                kubectl -n prod apply -f ./ca/update_workload/update-redis-image.yaml
                '''
            }
        }

        stage('liveliness test') {
            steps {
                sh '''
                sleep 5
                kubectl -n prod delete pod $(kubectl -n prod get pods | grep frontend | awk '{print $1}')
                sleep 5
                '''
            }
        }

    }
}
