pipeline {
    agent { label 'HIPSTER1' }
    stages {
        stage('git') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/ingress_version']], userRemoteConfigs: [[url:'https://github.com/cyberarmor-io/microservices-demo.git']]])
            }
        }

        stage('deploy in dev environment') {
            steps {
                sh '''
                kubectl set image deployment/redis-cart -n dev redis=redis:5-alpine
                '''
            }
        }

        stage('system test') {
            steps {
                sh '''
                sleep 120
                '''
            }
        }

        stage('sign workload') {
            steps {
            sh '''
            ./ca/update_workload/signone.sh redis-cart redis:alpine redis:5-alpine
            '''
            }
        }

        stage('promote') {
            steps {
                sh '''
                sleep 10
                '''
            }
        }

        stage('deploy in prod environment') {
            steps {
                sh '''
                kubectl set image deployment/redis-cart -n prod redis=redis:5-alpine
                kubectl -n prod delete pod $(kubectl -n prod get pods | grep redis-cart | awk '{print $1}') || true
                '''
            }
        }

        stage('liveliness test') {
            steps {
                sh '''
                sleep 120
                kubectl -n prod delete pod $(kubectl -n prod get pods | grep frontend | awk '{print $1}')
                sleep 5
                '''
            }
        }

    }
}
